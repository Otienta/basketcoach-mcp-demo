# basketcoach-mcp/.env.example
# BasketCoach MCP - Configuration Environnement
# Copiez ce fichier en .env et modifiez les valeurs

# Serveur MCP
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_LOG_LEVEL=INFO

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=basketcoach-mcp

# APIs Externes (optionnelles)
NEWS_API_KEY=votre_cle_newsapi_ici
SPORTS_DATA_API_KEY=votre_cle_sportsdata_ici

# Configuration Logging
LOG_LEVEL=INFO
LOG_FILE=logs/basketcoach.log

# Configuration Donn√©es
DATA_RAW_PATH=data/raw/
DATA_PROCESSED_PATH=data/processed/
DATA_CACHE_DURATION=3600

# Configuration RAG
RAG_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
RAG_SIMILARITY_THRESHOLD=0.7

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

#API_SPORTS_KEY=47d5a7ad5e98b8682e4dc3ced659c10d
API_SPORTS_KEY=75e8d4e8e0f8d7f15e9b1e8f8d8f8e8f8e8f8e8f8e8f8e8f8e8f8e8f

